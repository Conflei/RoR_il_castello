<h1>Listing Showcars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Photo link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @showcars.each do |showcar| %>
      <tr>
        <td><%= showcar.name %></td>
        <td><%= showcar.description %></td>
        <td><%= showcar.photo_link %></td>
        <td><%= link_to 'Show', showcar %></td>
        <td><%= link_to 'Edit', edit_showcar_path(showcar) %></td>
        <td><%= link_to 'Destroy', showcar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Showcar', new_showcar_path %>

