    <script>
      $(document).ready(function(){
           //$(".active").css("")
           $("#gen-nav").css("position","fixed");
                $("#gen-nav").css("width", "100%");
         
           $(".active>a").css("border-bottom","solid 4px #222222");
           $(".active").removeClass("active");
           var li = $($(".navbar-nav")[0]).find("li")[5];
           $(li).addClass("active");
            $(".active>a").css("border-bottom","solid 3px #F3C848");

        });

      function cambiarCMS(idx){
         $($("#content").find(".current")).fadeOut();
         setTimeout(function(){$($("#content").children()[idx]).fadeIn().addClass("current");},500);
      }

  </script>

